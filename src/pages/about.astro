---
import BaseLayout from '../layouts/LO_BASE.astro';
import Static from '../layouts/LO_STATIC.astro';
import AboutContent from '../content/staticpages/about_content.md';
import { HELEN_PIC, HELEN_PIC_ALT_TEXT } from '../consts';
---

<BaseLayout title="About">
    <div class="about-wrapper page-wrapper">
        <img src={HELEN_PIC} alt={HELEN_PIC_ALT_TEXT}/>
        <Static>
            <AboutContent/>
        </Static>
    </div>
</BaseLayout>

<style>

    /* 300px */

    .about-wrapper {
        margin: 0 1rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        max-width: 900px;
    }

    .about-wrapper img {
        width: 150px;
        height: 200px;
        margin: 1rem;
    }

    /* 600px */

    @media screen and (min-width: 600px) {
        .about-wrapper {
            margin: 0 auto;
            padding: 0 1rem;
        }
    }

</style>